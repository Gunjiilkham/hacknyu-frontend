{
  "manifest_version": 3,
  "name": "CyberCTRL",
  "version": "1.0",
  "description": "Reverse Phishing Detector for Devs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}